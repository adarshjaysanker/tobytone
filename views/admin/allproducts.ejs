    <script>

        $(document).ready(function(){
            $('.crop-btn').click(function(){

                const productId = $(this).data('product-id');
                const imageSrc = $(this).data('image');

                const modal = createModal(imageSrc);

                const cropper = new Cropper(modal.querySelector('img'),{
                    aspectRatio : 1,
                    viewMode : 1,
                });
                modal.querySelector('.save-btn').addEventListener('click',function(){
                    const croppedCanvas = cropper.getCroppedCanvas();
                    const croppedImage = croppedCanvas.toDataURL('image/jpeg');

                    cropper.destroy();
                    modal.parentNode.removeChild(modal);
                });
                modal.querySelector('.close').addEventListener('click',function(){
                    cropper.destroy();
                    closeModal(modal);
                })
            })
        });

        function createModal(imageSrc){
            const modal = document.createElement('div');
            modal.classList.add('cropper-modal');

            const modalContent = document.createElement('div');
            modalContent.classList.add('cropper-modal-content');

            const img = document.createElement('img');
            img.src = imageSrc;
            modal.appendChild(img);

            const closeBtn = document.createElement('span');
            closeBtn.classList.add('close');
            closeBtn.innerHTML = '&times;';
            modalContent.appendChild(closeBtn);

            const saveBtn = document.createElement('button');
            saveBtn.classList.add('save-btn');
            saveBtn.textContent = 'save';
            modal.appendChild(saveBtn);

           modal.appendChild(modalContent);
           document.body.appendChild(modal);

           modal.style.display = 'block';
           return modal;
        }

        function closeModal(modal){
            modal.style.display = 'none';
            modal.parentNode.removeChild(modal);
        }

    </script>
   
   

