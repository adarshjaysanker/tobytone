    <script>

        $(document).ready(function(){
            $("#uploadImageButton").click(function(){
                $("#bannerImage").click();
            });

            $("#bannerImage").change(function(){
                const file = this.files[0];
                if(file){
                    const reader = new FileReader();
                    reader.onload = function(event){
                        const imagePreview = $("#imagePreview");
                        imagePreview.empty();
                        const image = $("<img>").attr("src",event.target.result).addClass("preview-image");
                        imagePreview.append(image);
                    };
                    reader.readAsDataURL(file);
                }
            })
        });

        $("#addBannerForm").submit(function(event){
            event.preventDefault();
            const formData = new FormData(this);
            $.ajax({
                url : "/admin/addbanner",
                type : "POST",
                data : formData,
                processData : false,
                contentType : false,
                success : function(data){
                    if(data.success){
                        const successMessage = $("<div>").addClass("success-message").text(data.message);
                            $(".add-banner-form").append(successMessage);
                            $("#bannerTitle").val("");
                            $("#bannerImage").val("");
                            $("#imagePreview").empty();
                    }else{
                        console.error(data.error);
                    }
                },
                error : function(error){
                    console.error(error);
                }
            })
        });


    </script>


