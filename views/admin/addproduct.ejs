        <script>
            function previewImage(event,imagePreview,imageError){
                var input= event.target
                var preview = document.getElementById(imagePreview);
                var imageError=document.getElementById(imageError)
                if (input.files && input.files[0]){
                    var file = input.files[0];
                    var allowedTypes=['image/jpeg','image/png','image/webp','image/jpg']
                    if(allowedTypes.includes(file.type)){
             var reader= new FileReader()
                reader.onload=function (e){
                    preview.setAttribute('src',e.target.result)
                    imageError.textContent=''
                }
                reader.readAsDataURL(file)
                    }else {
                        
                     
                        preview.setAttribute('src', ''); // Clear the preview
                        imageError.innerHTML = 'Invalid file type. Please select an image.'; // Display error message
                    }
                  
                 
                }else{
                    preview.setAttribute('src', '');
                    imageError.textContent = ''
                }
                
            
