    <script>

        $(document).ready(function(){
            function fetchCoupons(){
                $.ajax({
                    url : '/admin/getallcoupons',
                    method : 'GET',
                    success : function(response){
                        const coupons = response.coupons;

                        const tableBody = $('#couponTableBody');
                        tableBody.empty();

                        coupons.forEach(function(coupon){
                            const row = $('<tr>');
                                row.append($('<td>').text(coupon.offer));
                                    row.append($('<td>').text(coupon.discount));
                                        row.append($('<td>').text(coupon.amountType));
                                        row.append($('<td>').text(coupon.expirationDate));
                                            row.append($('<td>').text(coupon.code));
                                                tableBody.append(row);
                        });
                    },
                    error : function(){
                        alert('failed to fetch coupons');
                    }
                })
            }
        
            fetchCoupons();

       
            $('#addCouponForm').submit(function(event){
                event.preventDefault();
                const formData = $(this).serialize();
                console.log(formData);

                $.ajax({
                    url : '/admin/generatecoupon',
                    method : 'POST',
                    data : formData,
                    success : function(response){
                        $('#couponCode').val(response.couponCode);
                        fetchCoupons();
                    },
                    error : function(){
                        alert('coupon generation failed');
                    }
                })
            })

        });

    </script>

   
