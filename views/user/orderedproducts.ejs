      <div class="d-flex justify-content-between">
        <img width="50px" src="/uploads/<%= product.image[0] %>" alt="">

            <p class="fw-bold mb-0 text-dark"><%= product?.title %>(Qty:<%= product?.quantity %>)</p>
            <p class="text-muted mb-0"><%= product?.cost %></p>
            <% totalPrice +=product.cost %>
            
        </div>
        <%  })  %>

