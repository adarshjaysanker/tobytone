    <script>

        async function toggleWishlist(button){
            const productId = button.getAttribute("data-product-id");
            try{
                const response = await fetch(`/addtowishlist/${productId}`,{
                    method : "POST",
                    headers : {
                        "Content-Type" : "application/json",
                    },
                });
                const data = await response.json();
                if(data.success){
                    const isProductInWishlist = button.classList.contains("wishlist-active");
                    if(isProductInWishlist){
                        removeFromWishlist(productId);
                        button.classList.remove("wishlist-active");
                        button.querySelector(".wishlist-text").textContent = "Add to Wishlist";
                    }else{
                        addToWishlist(productId);
                        button.classList.add("wishlist-active");
                        button.querySelector(".wishlist-text").textContent = "Remove from Wishlist";
                    }
                }else{
                    alert("Failed to add to wishlist");
                }
            }catch(error){
                console.error("error : ",error);
                alert("An error occured while adding to wishlist")
            }
        }

        async function addToWishlist(productId){
            try{
                const response = await fetch(`/addtowishlist/${productId}`,{
                    method : "POST",
                    headers : {
                        "Content-Type" : "application/json",
                    },
                });
                const data = await response.json();
                const messageContainer = document.getElementById("cartMessage");
                if(data.success){
                    messageContainer.textContent = "added to wishlist : "+productId;
                    messageContainer.style.display = "block";
                }else{
                    messageContainer.textContent = "please login into your account to add the product :"+productId;
                    messageContainer.style.display = "block";
                }
            }catch(error){
                console.error("error : ",error);
                alert("an error occured while adding to wishlist")
            }
        }

        async function removeFromWishlist(productId){
            try{
                const response = await fetch(`/removefromwishlist/${productId}`,{
                    method : "POST",
                    headers : {
                        "Content-Type" : "application/json",
                    },
                });
                const data = await response.json();
                if(data.success){
                    alert("removed from wishlist : " +productId)
                }else{
                    alert("failed to remove from wishlist");
                }
            }catch(error){
                console.error("error" ,error);
                alert("an error occured while removing from wishlist");
            }
        }


    </script>

    <script>

        function addToCart(productId){
            event.preventDefault()
            fetch(`/addtocart/${productId}`)
            .then(response=>response.json())
            .then(data=>{
                const cartMessageElement = document.getElementById("cartMessage");
                if(data.message){
                    cartMessageElement.textContent = data.message;
                    cartMessageElement.style.display = "block";
                }else{
                    cartMessageElement.textContent = 'product added to the cart successfully';
                    cartMessageElement.style.display = "block";
                }
            })
            .catch(error=>{
                console.error('error : ',error);
            })
        }

    </script>



