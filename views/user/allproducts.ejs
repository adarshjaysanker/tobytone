    <script>

        function cropProductImage(productId){
            const image = document.getElementById(`productImage${productId}`);
            const cropper = new Cropper(image,{
                aspectRatio : 1,
                viewMode : 1,
                responsive : true,
            });

            $('#cropModal' + productId).on('shown.bs.modal', function(){
                cropper.destroy();
                cropper = new Cropper(image,{
                    aspectRatio : 1,
                    viewMode : 1,
                    responsive : true,
                })
            });

            $('#cropModal' + productId).on('hidden.bs.modal',function(){
                cropper.destroy();
            })
        }

