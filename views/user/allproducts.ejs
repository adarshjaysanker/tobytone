    <script>

        function filterProductsByPrice(){
            const priceFilters = $("input[type='checkbox'][id^='price-']:checked")
        .map(function () {
            return this.id.replace("price-", "");
        })
        .get();
            console.log('selected price filters : ',priceFilters);

            $.ajax({
                type : 'GET',
                url : '/filterproducts',
                data : {priceFilters},
                success : function(products){
                    const productsContainer = $("#products-container");
                    productsContainer.empty();

                    products.forEach(function(product){
                        const productHtml = `
                        <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                        <div class="card product-item border-0 mb-4">
                            <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                <img class="img-fluid w-100" src="uploads/${product.image[0]}" alt="">
                            </div>
                            <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                <h6 class="text-truncate mb-3">${product.title}</h6>
                                <div class="d-flex justify-content-center">
                                    <h6>${product.cost}</h6><h6 class="text-muted ml-2"></h6>
                                </div>
                            </div>
                            <div class="card-footer d-flex justify-content-between bg-light border">
                                <a href="/productdetails/${product._id}" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                                <a href="/addtocart/${product._id}" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                            </div>
                            <div class="card-footer d-flex justify-content-between bg-light border">
                                <a href="/purchase/${ product._id }" class="btn btn-sm btn-success">Buy Now</a>
                            </div>
                        </div>
                    </div>
                    `;
                    productsContainer.append(productHtml)
                    })

                    
                },
                error : function(error){
                    console.error('error fetching filtered products:',error);
                }
            })
        }

        $("input[type='checkbox'][id^='price-']").on("change",function(){
            if($(this).is(':checked')){
                $("input[type='checkbox'][id^='price-']").not(this).prop('checked',false);
            }
            filterProductsByPrice();
        })

    </script>

